<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row_mother"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" 
    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/user_image_holder"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent" >

        <!--
                ImageView android:id="@+id/user_image_background"
				android:layout_width="75dip"
				android:layout_height="60dip"
				android:src="@drawable/tweet_pic_bg" /
        -->

        <ImageView
            android:id="@+id/user_image"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:clickable="true"
            android:padding="5dip"/>
            <!--android:src="@drawable/sample_uimg" /-->
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/text_holder"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_marginTop="5px" >

        <RelativeLayout
            android:id="@+id/twet_holder"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/user_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textStyle="bold"
                android:textColor="#000000" />
                <!--android:text="USerName"/-->

            <TextView
                android:id="@+id/date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10dp"
                android:textColor="#575757" />
            	<!--android:text="date" /-->

        </RelativeLayout>

        <TextView
            android:id="@+id/tweet_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:textColor="#000000"
            android:focusable="false"
            android:linksClickable="false" />
        	<!--android:text="Tweet Text"/-->
    </LinearLayout>

</LinearLayout>